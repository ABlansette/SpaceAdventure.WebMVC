@model IEnumerable<SpaceAdventure.Models.Adventurer.AdventurerListItems>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AdventurerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Level)
        </th>
        <th></th>
    </tr>
    @{
        int i = 0;
    }
    @foreach (var item in Model)
    {
        i++;
        if (i % 2 == 0)
        {
            <tr style="background-color: rgb(132, 42, 173)","color: white;" >

                <td>
                    @Html.DisplayFor(modelItem => item.AdventurerId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Level)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.AdventurerId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.AdventurerId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.AdventurerId })
                </td>
            </tr>
        }
        else
        {
            <tr style="background-color: rgb(132, 42, 242)","color: white;">

                <td>
                    @Html.DisplayFor(modelItem => item.AdventurerId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Level)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.AdventurerId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.AdventurerId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.AdventurerId })
                </td>
            </tr>
        }
    }

</table>

@Html.ActionLink("Settings", "../Home/Settings")
